

@model FashionModeling.Models.CommonListModel
@{
    //ViewBag.Title = "Common";  
    //ViewBag.Page = "Common";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.Title </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">@ViewBag.Title</h3>
                        <div class="box-tools pull-right">
                            <a href="@Url.Action("AddCommon","Admin",routeValues: new { type=ViewBag.Page})" class="btn btn-default"><i class="fa fa-plus"></i> Add New</a>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12" id="listdetails">
                                @Html.Partial("~/Views/Admin/_commonlist.cshtml", Model.CommonList)
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- ./box-body -->
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-sm-3 col-xs-6">
                                <ul class="pagination pagination-sm inline">
                                    @if (@Model.CommonList.HasPreviousPage)
                                    {
                                        <li><a href="@Url.Action("Common","Admin",routeValues:new {page =Model.CommonList.FirstPage,pageSize = Model.CommonList.PageSize,type=ViewBag.Page })">«</a></li>
                                        <li><a href="@Url.Action("Common","Admin",routeValues:new {page =Model.CommonList.PageIndex-1,pageSize = Model.CommonList.PageSize,type=ViewBag.Page })">@(Model.CommonList.PageIndex - 1)</a></li>
                                    }
                                    @if (@Model.CommonList.Count > 0)
                                    {
                                        <li><a href="#">@Model.CommonList.PageIndex</a></li>
                                    }
                                    @if (@Model.CommonList.HasNextPage)
                                    {
                                        <li><a href="@Url.Action("Common","Admin",routeValues:new {type=ViewBag.Page,page =Model.CommonList.PageIndex+1,pageSize = Model.CommonList.PageSize })">@(Model.CommonList.PageIndex + 1)</a></li>
                                        <li><a href="@Url.Action("Common",routeValues:new {type=ViewBag.Page,page =Model.CommonList.LastPage,pageSize = Model.CommonList.PageSize })">»</a></li>
                                    }
                                </ul>
                            </div>
                            <div class="col-sm-3 col-xs-6">
                                @*<a href="@Url.Action("AddCommon","Admin")" class="btn btn-default"><i class="fa fa-plus"></i> Add New</a>*@
                                <!-- /.description-block -->
                            </div>
                            <div class="col-sm-3 col-xs-6">
                            </div>
                            <div class="col-sm-3 col-xs-6">
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

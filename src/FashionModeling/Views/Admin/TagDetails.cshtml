@model FashionModeling.Models.TagDetailsModel

@{
    ViewBag.Title = "Tag Details";
    ViewBag.Page = "Tags";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action(ViewBag.Page,"Admin")"><i class="fa fa-dashboard"></i> @ViewBag.Page</a></li>
            <li class="active">@ViewBag.Title </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">@ViewBag.Title</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12" id="listdetails">
                                <table class="table table-bordered">
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.TagName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.TagName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.TagType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.TagType)
                                        </td>
                                    </tr>                                    
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </td>
                                        <td>
                                            <span data-utc="@Model.CreatedDate.ToString("dd-MM-yyyy HH:mm")"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.IsActive)
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- ./box-body -->
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-sm-3 col-xs-6">
                                @using (Html.BeginForm("DeleteTags", "Admin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", Model.TagId)
                                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete this Tags</button>
                                }       <!-- /.description-block -->
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


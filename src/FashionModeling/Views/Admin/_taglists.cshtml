@model PagedList<FashionModeling.Models.TagDetailsModel>

<table class="table table-bordered">
    <tr>
        <th>
            Sl No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TagName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TagType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedDate)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model.Select((value, index) => new { value, index }))
    {
        <tr>
            <td>
                @(item.index + (Model.PageSize * (Model.PageIndex - 1)) + 1)
            </td>            
            <td>
                <a href="@Url.Action("TagDetails","Admin",routeValues: new { id= item.value.TagId})">@Html.DisplayFor(modelItem => item.value.TagName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.value.TagType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.value.IsActive)
            </td>
            <td>
                <span data-utc="@item.value.CreatedDate.ToString("dd-MM-yyyy HH:mm")"></span>
            </td>
            <td>
                <a href="@Url.Action("EditTags","Admin",routeValues: new {  id=item.value.TagId })"><i class="fa fa-edit"></i></a>
            </td>
        </tr>
    }
</table>
